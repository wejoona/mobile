<?xml version="1.0" encoding="utf-8"?>
<!--
    SECURITY: Network Security Configuration
    - Disables cleartext (HTTP) traffic in release builds
    - Allows localhost for development only
    - Enforces HTTPS for all production traffic
-->
<network-security-config>
    <!-- Base configuration for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow localhost for development (debug builds only) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>

    <!-- Production API domain with certificate pinning -->
