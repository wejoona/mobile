<?xml version="1.0" encoding="utf-8"?>
<!--
    SECURITY: Network Security Configuration
    - Disables cleartext (HTTP) traffic in release builds
    - Allows localhost for development only
    - Enforces HTTPS for all production traffic
    - Certificate pinning for production API

    DEPLOYMENT: Before production release:
    1. Generate certificate pins using:
       openssl s_client -servername api.joonapay.com -connect api.joonapay.com:443 </dev/null 2>/dev/null | \
         openssl x509 -pubkey -noout | \
         openssl pkey -pubin -outform der | \
         openssl dgst -sha256 -binary | \
         openssl enc -base64
    2. Replace REPLACE_WITH_ACTUAL_PIN values with generated pins
    3. Update expiration date to 1 year from certificate expiry
-->
<network-security-config>
    <!-- Base configuration for all domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Allow localhost for development (debug builds only) -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
    </domain-config>

    <!-- Production API domain with certificate pinning -->
    <!-- DEPLOYMENT: Update pins with actual certificate pins before production release -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">api.joonapay.com</domain>
        <domain includeSubdomains="true">joonapay.com</domain>
        <pin-set expiration="2027-01-25">
            <!-- Primary certificate pin - TODO: Replace with actual pin before production -->
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <!-- Backup certificate pin for rotation - TODO: Replace with actual pin -->
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
