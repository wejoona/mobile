<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Left: Balance section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JoonaPay"
            android:textColor="#C9A962"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/widget_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1,234.56"
            android:textColor="#F5F5F0"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widget_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Balance"
            android:textColor="#9A9A9E"
            android:textSize="11sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Right: Quick actions -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="12dp">

        <!-- Send button -->
        <LinearLayout
            android:id="@+id/widget_send_button"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_send"
                android:tint="#C9A962"
                android:contentDescription="Send" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="#F5F5F0"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Receive button -->
        <LinearLayout
            android:id="@+id/widget_receive_button"
            android:layout_width="72dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_receive"
                android:tint="#C9A962"
                android:contentDescription="Receive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive"
                android:textColor="#F5F5F0"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
