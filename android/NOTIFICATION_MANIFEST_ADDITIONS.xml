<!--
  Add these entries to android/app/src/main/AndroidManifest.xml
  for Firebase Push Notifications support
-->

<!-- ============================================ -->
<!-- PERMISSIONS (Add inside <manifest> tag, before <application>) -->
<!-- ============================================ -->
<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

<!-- ============================================ -->
<!-- METADATA (Add inside <application> tag) -->
<!-- ============================================ -->

<!-- Default notification channel ID -->
<meta-data
    android:name="com.google.firebase.messaging.default_notification_channel_id"
    android:value="high_importance_channel" />

<!-- Default notification icon (use app icon as fallback) -->
<meta-data
    android:name="com.google.firebase.messaging.default_notification_icon"
    android:resource="@mipmap/ic_launcher" />

<!-- Default notification color (JoonaPay gold) -->
<meta-data
    android:name="com.google.firebase.messaging.default_notification_color"
    android:resource="@color/notification_color" />

<!-- ============================================ -->
<!-- NOTIFICATION COLOR RESOURCE -->
<!-- ============================================ -->
<!--
Create or update: android/app/src/main/res/values/colors.xml

<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="notification_color">#C9A962</color>
</resources>
-->

<!-- ============================================ -->
<!-- NOTIFICATION ICON (OPTIONAL) -->
<!-- ============================================ -->
